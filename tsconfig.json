{
    "compilerOptions": {
        "target": "ES6",
        "module": "CommonJS",
        "rootDir": "./src",
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "typeRoots": [
            "src/types/",
            "node_modules/@types/"
        ]
    },
    
    "include": [
        "src",
        "src/types/*",
    ]
}